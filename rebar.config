{erl_opts, [{parse_transform, lager_transform}, {src_dirs, ["src", "test"]},
            warn_unused_vars,
            warn_export_all,
            warn_shadow_vars,
            warn_unused_import,
            warn_unused_function,
            warn_bif_clash,
            warn_unused_record,
            warn_deprecated_function,
            warn_obsolete_guard,
            strict_validation,
            warn_export_vars,
            warn_exported_vars,
            warn_missing_spec,
            warn_untyped_record, debug_info]}.
{deps_dir, "deps"}.
{deps, [
 {lager,  "2.1.1", {git, "git@github.com:tigertext/lager.git",  {tag, "2.1.1"} }},
 {eper,   ".*",    {git, "git@github.com:tigertext/eper.git",   "HEAD"   }},
 {proper, ".*",    {git, "git@github.com:manopapad/proper.git", "master" }}
]}.
{xref_warnings, true}.
{xref_checks, [undefined_function_calls, undefined_functions, locals_not_used, deprecated_function_calls, deprecated_functions]}.
{cover_enabled, true}.
{ct_extra_params,"-logdir log/ct -smp enable -s lager"}.
{edoc_opts, [{report_missing_types, true}, {source_path, ["src"]}, {report_missing_types, true}, {todo, true}, {packages, false}, {subpackages, false}]}.
